<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(basic) -%>">
  <span class='title'>
    <%= basic.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.basics_basic_path(basic),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_basics_admin_basic_path(basic),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.basics_admin_basic_path(basic),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => basic.title),
        :method => :delete %>
  </span>
</li>
